- name: Write kubelet config file
  copy:
    dest: /var/lib/kubelet/config.yaml
    content: |
      maxPods: 500
      podPidsLimit: 16384
    owner: root
    group: root
    mode: '0644'

- name: Restart kubelet
  systemd:
    name: kubelet
    state: restarted

- name: add label to existing namespace
  kubernetes.core.k8s:
    state: patched
    kind: Namespace
    name: patch_namespace
    definition:
      metadata:
        labels:
          support: patch
